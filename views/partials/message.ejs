<div class="message-card">
  <% if (user && (user.premium_member||msg.user_id === user.id||user.admin) ){
  %>
  <h4>@<%= msg.username %></h4>
  <p><%= msg.message %></p>
  <p><i>Posted: <%= msg.date.toDateString() %></i></p>
  <% if (user.admin) { %>
  <form action="/<%= msg.id %>/delete" method="POST">
    <button
      type="submit"
      onclick="return confirm('Are you sure you want to delete this message?');"
      class="button-delete"
    >
      Delete
    </button>
  </form>
  <% } %> <% } else {%>
  <h4>@Anonymous</h4>
  <p><%= msg.message %></p>
  <p><i>Posted: ****</i></p>
  <% } %>
</div>
